<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zzz.cloud.dao.PaymentDao">

    <insert id="create" parameterType="com.zzz.cloud.entity.Payment" useGeneratedKeys="true" keyProperty="id">
        insert into payment(serial) values(#{serial})
    </insert>
    <select id="getPaymentById" resultType="com.zzz.cloud.entity.Payment">
        select id,serial from payment where id = #{id}
    </select>
</mapper>